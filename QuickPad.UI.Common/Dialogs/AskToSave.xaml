<ContentDialog
    x:Class="QuickPad.UI.Common.Dialogs.AskToSave"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Quick Pad"
    PrimaryButtonText="Save"
    SecondaryButtonText="Don't Save"
    CloseButtonText="Cancel"
    PrimaryButtonCommand="{x:Bind Commands.SaveCommand}"
    PrimaryButtonCommandParameter="{Binding ViewModel}"    
    SecondaryButtonClick="AskToSave_OnSecondaryButtonClick"
    Background="{x:Bind VisualThemeSelector.CurrentItem.BackgroundAcrylicBrush, Mode=OneWay}">

    <Grid>
        <TextBlock Text="Would you like to save your changes?"/>
    </Grid>
</ContentDialog>
