<ContentDialog
    x:Class="QuickPad.UI.Dialogs.WelcomeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Welcome back to Quick Pad!"
    Windows10version1809:CornerRadius="4"
    Background="{x:Bind VtSelector.CurrentItem.BackgroundAcrylicBrush, Mode=OneWay}"
    mc:Ignorable="d">

    <Grid Width="376">
        <StackPanel VerticalAlignment="Stretch" Orientation="Vertical">
            <TextBlock
                x:Uid="WelcomeDialogPar1"
                FontSize="14"
                Text="After a few months without updates I am really excited to announce that Quick Pad has been fully rewritten from scratch!"
                TextWrapping="Wrap" />
            <TextBlock
                x:Uid="WelcomeDialogPar2"
                Padding="0,4,0,0"
                FontSize="14"
                Text="Every single option is still available as well as a few new ones. As a result of rewriting the app from scratch you will need to set any of the customizations made in previous version again, I apologize for any inconvenience but I really hope that you find it worth it and enjoy the new version!"
                TextWrapping="Wrap" />

            <Button
                x:Name="CmdClose"
                Height="48"
                Margin="0,12,0,0"
                HorizontalAlignment="Stretch"
                Click="CmdClose_Click"
                Content="Lets go!"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</ContentDialog>
